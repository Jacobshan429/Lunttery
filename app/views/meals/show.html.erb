<p>Hello Meal show</p>

  <%=form_for @meal,:url => dinner_meal_path(@dinner,@meal) , :method=>:patch do |d| %>
    <div class="form-group">
      <%=d.label :name ,"店名"%>
      <%=d.text_field :name ,:class => "form-control" %>
    </div>

    <div class="form-group">
      <%=d.label :discription ,"形容"%>
      <%=d.text_field :discription ,:class => "form-control" %>
    </div>
    <div class="form-group">
      <%=d.label :price ,"價格"%>
      <%=d.text_field :price ,:class => "form-control" %>
    </div>

    <div class="form-group">
      <%=d.label :style_id ,"風格"%>
      <%=d.collection_select(:style_id, Style.all, :id, :name) %>
    </div>
		<!-- problem to be fix -->
    <div>
      <%= d.fields_for :photos do |photo|%>
      	<%= photo.file_field :avatar ,:class => "form-control" %>
      <%end %>
    </div>

    <%= d.submit "更新", :class => "btn btn-primary"%>
  <%end %>

