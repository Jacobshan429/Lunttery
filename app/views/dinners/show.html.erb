<h1>Hello Dinner show page</h1>

<div>
  <table class="table table-hover">
    <tr>
        <th>店名</th>
        <th>地址</th>
        <th>ZIP</th>
        <th>區</th>          
        <th>經度</th> 
        <th>緯度</th>
        <th>評分</th>
        <th>風格</th>
        <th>價位</th>
    </tr>       
    
    <tr>
      <td><%= @dinner.name %></td>
      <td><%= @dinner.address %></td>
      <td><%= @dinner.zip %></td>
      <td><%= @dinner.district %></td>
      <td><%= @dinner.lat %></td>
      <td><%= @dinner.lng %></td>
      <td><%= @dinner.rating %></td>
      <td><%= @dinner.style.try(:name) %></td>
      <td><%= @dinner.price_level %></td>
    </tr>
    
  </table>
</div>

<%= link_to  "New", new_meal_path ,:class=>"btn btn-primary"%>


<div>
  <% @meals.each do |meal| %>
    <p>名稱： <%= meal.name %> </p>
    <p>說明：<%= meal.discription %> </p>
    <p>價格： <%= meal.price %> </p>
  <% end %>
</div>


<%= link_to "回首頁", dinners_path,:class=>"btn btn-info" %>